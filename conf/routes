# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET     /websocket                  controllers.HomeController.socket()

GET     /initNewGame                controllers.HomeController.initNewGame()
GET     /api/health                 controllers.HomeController.health()
GET     /gameBoard                  controllers.HomeController.board()
GET     /runLL                      controllers.HomeController.runLL()
GET     /init/playerAmount/:player  controllers.HomeController.getPlayerAmount(player: Int)
GET     /turn/playCard/:card        controllers.HomeController.playCard(card: Int)
GET     /turn/selectPlayer/:player  controllers.HomeController.selectPlayer(player: Int)
GET     /save                       controllers.HomeController.save()
GET     /undoStep                   controllers.HomeController.undoStep()
GET     /redoStep                   controllers.HomeController.redoStep()

GET     /init/red/playerAmount/:player  controllers.HomeController.setPlayerAmountRed(player: String)
GET     /init/red/playerName/       controllers.HomeController.setPlayerNameRed(name: String)
GET     /turn/red/playCard/:card    controllers.HomeController.playCardRed(card: Int)
GET     /turn/red/selectPlayer/:player     controllers.HomeController.selectPlayerRed(player: Int)
GET     /turn/red/getInvestigatorGuess/:guess   controllers.HomeController.getInvestigatorGuess(guess: String)

GET     /getSelectablePlayers/      controllers.HomeController.getSelectablePlayers()
POST    /init/playerName            controllers.HomeController.setPlayerName()
